<div>
  <div class="d-flex align-items-center">
    <%= button_tag type: 'button' do %>
      <%= label_tag 'img-upload', t(:select_img), class: 'mb-0'%>
    <% end %>
    <%= form.file_field image_field, class: 'd-none', id: 'img-upload' %>

    <% image_exist = model.send(image_field + '?') %>
    <span class="ml-3 mr-2" id="upload-img-name">
      <%=model.send(image_field).identifier if image_exist%>
    </span>
    <% img_src = image_exist ? model.send(image_field).thumb.url : '' %>
    <%= image_tag(img_src, id: 'upload-img-preview') %>
  </div>

  <% if defined? formats %>
    <div class="mt-2">
      <small><%=t(:supported_formats) + formats %></small>
    </div>
  <%end%>
</div>

<%= javascript_include_tag 'other' %>
