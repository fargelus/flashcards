<header class="clearfix">
  <ul class="navigation-links nav">
    <% if current_user %>
      <li class="nav-item">
        <%= link_to t(:all_cards), cards_path, class: 'nav-link active' %>
      </li>
      <li>
        <%= link_to t(:add_card), new_card_path, class: 'nav-link active' %>
      </li>
      <li>
        <%= link_to t(:logout), logout_path, method: :delete, method: :delete, class: 'nav-link active' %>
      </li>
    <% else %>
      <li class="nav-item">
        <%= link_to t(:sign_in), :login, class: 'nav-link active' %>
      </li>
      <li class="nav-item">
        <%= link_to t(:sign_up), new_user_path, class: 'nav-link active' %>
      </li>
    <% end %>
  </ul>
</header>

<main>
  <%= render partial: 'partials/page-title', locals: {title: t(:title)} %>

  <div>
    <p class="desc">
      <%=t('desc')%>
    </p>
  </div>
</main>

<%= render partial: 'partials/notice',
    locals: {
      notice_text: flash.notice,
      class_name: @wrong_answer ? 'alert-danger' : 'alert-success',
    } %>
