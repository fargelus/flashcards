<%= simple_form_for @user, url: user_sessions_path, html: {class: 'mt-4'} do |f| %>
  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :crypted_password %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t(:sign_in), class: 'btn-primary mt-2' %>
  </div>
<% end %>
