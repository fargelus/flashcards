<head>
  <title><%=t(:title)%></title>
  <%= stylesheet_link_tag 'bootstrap.min', 'application' %>
  <%= javascript_include_tag 'application' %>
</head>

<body>
  <section id="container">

    <header class="clearfix">
      <h1><%=t(:title)%></h1>
      <ul class="navigation-links nav">
        <li class="nav-item">
          <%= link_to t(:all_cards), cards_path, class: 'nav-link active' %>
        </li>
        <li class="nav-item">
          <a class="nav-link disabled" href="#"><%=t(:add_card)%></a>
        </li>
      </ul>
    </header>

    <section>
      <p class="desc">
        <%=t('desc')%>
      </p>
    </section>

  </section>
</body>
